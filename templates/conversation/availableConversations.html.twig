{% extends 'base.html.twig' %}

{% block body %}

    {% if conversations is empty %}
        <h4>Aucune conversation enregistr√©e pour cet utilisateur</h4>
    {% else %}
        {% for conversation in conversations %}
            <a class='btn btn-primary' href='{{ path('app_conversation', {'id': conversation.id }) }}'>
            {% if conversation.user[0] == app.user %}
                {{ conversation.user[1].email }}
            {% else %}
                {{ conversation.user[0].email }}
            {% endif %}
           </a>
        {% endfor %}
    {% endif %}

{% endblock %}